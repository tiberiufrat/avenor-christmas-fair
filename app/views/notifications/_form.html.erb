<%= form_with(model: notification, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :admin_id %>
    <%= form.collection_select(:admin_id, Admin.all, :id, :name, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_field :text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :color %>
    <%= form.text_field :color, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :icon %>
    <%= form.text_field :icon, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
