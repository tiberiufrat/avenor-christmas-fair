<%= form_with(model: event, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :color %>
    <%= form.text_field :color, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :start %>
    <%= form.text_field :start, value: l(event.start), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <%= form.label :end %>
    <%= form.text_field :end, value: l(event.end), class: 'form-control', data: { controller: 'datetime' } %>
  </div>
  <div class="form-group">
    <div class="custom-control custom-checkbox">
      <%= form.check_box :all_day, class: 'custom-control-input' %>
      <%= form.label :all_day, class: 'custom-control-label' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :admin_id %>
    <%= form.collection_select(:admin_id, Admin.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
