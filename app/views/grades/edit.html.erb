<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Clase</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Panou de control', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Clase', grades_path %></div>
      <div class="breadcrumb-item">Modificare clasă</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Modificare clasă</h4>
      </div>
      <div class="card-body">
        <%= render 'form', grade: @grade %>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-eye', 'Vizualizare'), @grade, data: { turbolinks_action: 'replace' }, class: 'btn btn-icon icon-left btn-info' %>
<%= link_to icon('fas fa-arrow-left', 'Înapoi'), 'javascript:history.back()', class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Modificare clasă') %>
